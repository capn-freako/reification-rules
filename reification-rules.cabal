  Extensions:
  Build-Depends:    base<5
                  , containers
                  , ghc >= 7.10.3
                  , ghc-prim >= 0.5.0.0
                  , constraints
                  , transformers >= 0.4
                  , ty >= 0.1.5
                  , circat

